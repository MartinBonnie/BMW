<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="user" extends="bmw-default" namespace="/user">
		<!--全局跳转 -->
		<global-results>
			<result name="index" type="redirect">/customer/index.jsp</result>
			<result name="error">/customer/result.jsp</result>
			<result name="login">/customer/user/login.jsp</result>
		</global-results>
		<!--用户注销 -->
		<action name="logout" class="userAction"
			method="logout">
			<result name="login" type="redirect">/</result>
			<result name="index" type="redirect">/customer/login.jsp</result>
		</action>
		
				
		<!-- Login -->
		<action name="*User" class="userAction"
			method="{1}">
			<result name="input">/customer/user/login.jsp</result>
			<result name="success">/customer/user/success.jsp</result>
		</action>
			

	</package>
	
</struts>

